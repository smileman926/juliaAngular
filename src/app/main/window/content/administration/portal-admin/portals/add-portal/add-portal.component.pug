app-loading.loading-bar(*ngIf="isLoading | async")
form.grid-area(*ngIf="form", [formGroup]="form")
  .form-group
    label(translate) BackEnd_WikiLanguage.POA_Name
    input(formControlName="name")
  .form-group
    label(translate) BackEnd_WikiLanguage.POA_AccountNo
    input(formControlName="accountNo")
  .form-group
    label(translate) BackEnd_WikiLanguage.POA_SerialNo
    .input-group
      input(formControlName="serialNo")
      .input-group-append
        button.btn.btn-secondary((click)="generateSerialNo()", translate) BackEnd_WikiLanguage.POA_GenerateSerialNo
  .form-group
    label(translate) BackEnd_WikiLanguage.POA_IP
    input(formControlName="ip")
  .form-group
    label(translate) BackEnd_WikiLanguage.POA_CssFile
    input(formControlName="cssFile")
  .form-group
    label(translate) BackEnd_WikiLanguage.CI_NameLabel
    input(formControlName="ciName")
  .form-check
    label(translate) BackEnd_WikiLanguage.POA_Active
    input(type="checkbox", formControlName="active")
  .form-check
    label(translate) BackEnd_WikiLanguage.ShowInWizard
    input(type="checkbox", formControlName="showInWizard")
